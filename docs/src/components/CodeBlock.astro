function applyCut(s: string) {
  return s.split(/\/\/ \-\-\-cut\-\-\-\s*/).pop() ?? "";
}
function mapPaths(s: string) {
  // return s.replace(/import \* as (\w+) from "(\w+)"/g, 'import $1 from "$2"')
  return s.replace(/\.\.\/src/g, "matchina");
}
